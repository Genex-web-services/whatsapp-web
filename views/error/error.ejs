<%- include('../partials/head') %>
<main class="h-full flex items-center justify-center bg-gray-100">
  <div class="text-center p-8 rounded-lg shadow-md bg-gray-100 dark:bg-neutral-700 max-w-md w-full">
    <h1 class="fs-1 font-bold text-red-600 dark:text-red-400 mb-4"> <%= status || 500 %></h1>
    <p class="text-lg text-gray-700 dark:text-gray-300 mb-6">
         <%= message || 'Something went wrong.' %>
    </p>
     <% if (error) { %>
        <pre class="text-left p-4 bg-gray-100 dark:bg-neutral-900 rounded text-sm overflow-x-auto"><%= JSON.stringify(error, null, 2) %></pre>
      <% } %>
      <div class="mt-6 space-y-2">
        <% buttons.forEach(btn => { %>
          <a href="<%= btn.href %>" class="inline-block px-5 py-2 rounded bg-blue-600 text-white hover:bg-blue-700 transition mr-2">
            <%= btn.text %>
          </a>
        <% }); %>
      </div>
  </div>
</main>

<%- include('../partials/script') %>
