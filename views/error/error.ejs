<%- include('../partials/head') %>
<%- include('../partials/sidebar') %>

<main class="dashboard-main bg-gray-100">
  <%- include('../partials/navbar') %>

  <div class="dashboard-main-body bg-gray-100 dark:bg-neutral-800 min-h-screen flex items-center justify-center">
    <div class="text-center max-w-lg">
      <h1 class="text-6xl font-bold text-red-600 dark:text-red-400 mb-4">
        <%= status || 500 %>
      </h1>
      <h2 class="text-2xl font-semibold text-gray-800 dark:text-gray-100 mb-2">
        <%= message || 'Something went wrong.' %>
      </h2>
      <p class="text-gray-600 dark:text-gray-300 mb-6">Please check your permissions or contact your administrator.</p>
      <a href="/dashboard" class="inline-block px-5 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition">
        Back to Dashboard
      </a>
    </div>
  </div>

  <%- include('../partials/footer') %>
  <%- include('../partials/script') %>
</main>
