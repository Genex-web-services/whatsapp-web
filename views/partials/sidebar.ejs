<script>
  const tenantId = "<%= user?.tenantId || '' %>";

  function navigateTo(path) {
    if (!tenantId) {
      window.location.href = "/projects";
    } else {
      path = path.replace(/^\/+/, ''); // remove leading slash if any
      window.location.href = `/dashboard/${tenantId}/${path}`;
    }
  }
